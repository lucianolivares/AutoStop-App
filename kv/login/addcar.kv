<AddCar>:
    FloatLayout:
        # Back y Título
        FloatLayout:
            pos_hint: {"x": 0, "top": 1}
            size_hint: 1, 0.08
            ImageButton:
                pos_hint: {"x": 0.02, "top": 0.8}
                size_hint: 0.2, 0.6
                source: "resources/icons/back.png"
                on_release:
                    app.change_screen("create_screen")
                    root.manager.transition.direction = "left"
            LabelTitle:
                pos_hint: {"x": 0.2, "top": 1}
                size_hint: 0.6, 1
                text: "Añadir un Vehículo"
        # Body
        FloatLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("fafbfd")
                Rectangle:
                    size: self.size
                    pos: self.pos
            pos_hint: {"x": 0, "top": 0.916}
            size_hint: 1, 0.918
            GridLayout:
                rows:1
                pos_hint: {"x": 0.1, "top": .95,}
                size_hint: 0.8, 0.27
                spacing: 50
                # Labels
                GridLayout:
                    rows: 4
                    orientation: "vertical"
                    spacing: 10
                    size_hint_x: 0.3
                    Label:
                        text: "Patente:"
                    Label:
                        text: "Rut Dueño:"
                    Label:
                        text: "Color del\n Vehículo:"
                    Label:
                        text: "N° de pasajeros:"
                # TextInputs
                BoxLayout:
                    orientation: "vertical"
                    spacing: 10
                    TextInput:
                        id: plate
                        hint_text: "XX-XX-00"
                        focus: True
                        on_text_validate: rut.focus = True
                    TextInput:
                        id: rut
                        hint_text: "19.000.000-K"
                        on_text_validate: car_color.focus = True
                    TextInput:
                        id: car_color
                        hint_text: "Rojo"
                        on_text_validate: sets.focus = True
                    TextInput:
                        id: seats
                        hint_text: "Ejemplo 4"
            # Botón Login
            ImageButton:
                source: "resources/icons/forward.png"
                pos_hint: {"top": 0.15, "x": 0.7}
                size_hint: 0.2, 0.1
                on_release:
                    app.change_screen("login_screen")
                    root.manager.transition.direction = "left"
