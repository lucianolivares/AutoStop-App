<InfoTrip>:
    FloatLayout:
        # Back y Título
        FloatLayout:
            pos_hint: {"x": 0, "top": 1}
            size_hint: 1, 0.08
            ImageButton:
                pos_hint: {"x": 0.02, "top": 0.8}
                size_hint: 0.2, 0.6
                source: "resources/icons/back.png"
                on_release:
                    app.change_screen("main_passenger")
                    root.manager.transition.direction = "left"
            LabelTitle:
                pos_hint: {"x": 0.2, "top": 1}
                size_hint: 0.6, 1
                text: "Info Viaje"
        # Body
        FloatLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("fafbfd")
                Rectangle:
                    size: self.size
                    pos: self.pos
            pos_hint: {"x": 0, "top": 0.916}
            size_hint: 1, 0.918
            GridLayout:
                id: driver_banner
                pos_hint: {"x": 0.1, "y": 0.7}
                size_hint: .8, .2
                cols: 1
            Label:
                pos_hint: {"x": 0.1, "y": 0.45}
                size_hint: .8, .05
                text: "¿Cuántos asientos quieres reservar?"
            TextInput:
                pos_hint: {"x": 0.3, "y": 0.38}
                size_hint: .4, .05
            Button:
                pos_hint: {"x": 0.3, "y": 0.2}
                size_hint: .4, .1
                text: "Reservar"